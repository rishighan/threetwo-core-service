{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "ES2022",
		"outDir": "dist",
		"skipLibCheck": true,
		"lib": ["es5", "es6", "dom", "dom.iterable"],
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*",
		"test"
	]
}
